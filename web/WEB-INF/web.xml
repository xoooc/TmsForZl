<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
           version="3.0">

    <servlet>
        <servlet-name>MyTaskServlet</servlet-name>
        <servlet-class>com.tms.zl.controller.MyTaskServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeptTaskServlet</servlet-name>
        <servlet-class>com.tms.zl.controller.DeptTaskServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SettingServlet</servlet-name>
        <servlet-class>com.tms.zl.controller.SettingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StatisticsServlet</servlet-name>
        <servlet-class>com.tms.zl.controller.StatisticsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TmsForZlServlet</servlet-name>
        <servlet-class>com.tms.zl.controller.TFZServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ScoreServlet</servlet-name>
        <servlet-class>com.tms.zl.controller.ScoreServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.tms.zl.controller.LoginServlet</servlet-class>
    </servlet>

    <!--head的超链接跳转jsp注册，如果不注册，则找不到WEB-INF下的jsp页面-->
    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/WEB-INF/login.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>myTask</servlet-name>
        <jsp-file>/WEB-INF/myTask.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>deptTask</servlet-name>
        <jsp-file>/WEB-INF/deptTask.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>statistics</servlet-name>
        <jsp-file>/WEB-INF/statistics.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>score</servlet-name>
        <jsp-file>/WEB-INF/score.jsp</jsp-file>
    </servlet>

    <!-- servlet的注册，用于处理jsp提交action的跳转，如果不注册，那么浏览器是不会跳转到该servlet -->
    <servlet-mapping>
        <servlet-name>MyTaskServlet</servlet-name>
        <url-pattern>/MyTask</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeptTaskServlet</servlet-name>
        <url-pattern>/DeptTask</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StatisticsServlet</servlet-name>
        <url-pattern>/Staticstics</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ScoreServlet</servlet-name>
        <url-pattern>/Score</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SettingServlet</servlet-name>
        <url-pattern>/Setting</url-pattern>
    </servlet-mapping>

    <!-- jsp的mapping,永远安全跳转注册，在web-inf下的jsp互相跳转(不通过servlet)-->
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>myTask</servlet-name>
        <url-pattern>/myTask</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deptTask</servlet-name>
        <url-pattern>/deptTask</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>statistics</servlet-name>
        <url-pattern>/statistics</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>score</servlet-name>
        <url-pattern>/score</url-pattern>
    </servlet-mapping>

</web-app>
